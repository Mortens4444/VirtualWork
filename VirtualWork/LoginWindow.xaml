<Window x:Class="VirtualWork.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Enter credentials"
		Height="165"
		Width="220"
		WindowStartupLocation="CenterScreen">
	<StackPanel>
		<WrapPanel>
			<TextBlock Width="100" Margin="5">User name</TextBlock>
			<TextBox x:Name="tbUsername" Text="" Width="200" Margin="5" />
		</WrapPanel>
		<WrapPanel>
			<TextBlock Width="100" Margin="5">Password</TextBlock>
			<TextBox x:Name="tbPassword" Text="" Width="200" Margin="5" />
		</WrapPanel>
		<Button Width="50">Login</Button>
	</StackPanel>
</Window>
